{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "types": [
          "node",
          "jest"
        ],
        "esModuleInterop": true, // Mainly so can test an import problem which only occurs with this option on!
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts"],
}
